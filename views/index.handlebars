<meta name = "viewport" content="width=device-width, initial-scale=1.0">

<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">

	<!-- import css -->
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/hci-friends.css" rel="stylesheet">
	<!--  -->	
</head>

<body>
	<!-- add container -->
	<div class="container">
	<!-- x -->

		<h1>My HCI Friends</h1>

		<!-- add friend -->
	    <div>
			<img src="images/rebecca-campbell-05rv6vhkCRs-unsplash.jpg" alt="pug" class="img-rounded">
				<a href="#" >
				<h4>Name: Buddy</h4>
				</a>
			<p>Description: He is a happy guy</p>
	    </div>
		<!-- x -->

		{{#each friends}}
		<div>
			<img src = {{imageURL}} width="476" class="img-rounded">
				<a href="#" >
				<h4>Name: {{name}}</h4>
				<!-- <h4>anagrammedName({{name}}) </h4> -->
				</a>
			<p>Description: {{description}}</p>

		</div>
		{{/each}}


		<form id="addFriendForm" role="form" method="get" action="/add">
			<h3>Add a friend</h3>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
		    </div>
		    <div class="form-group">
		      <label for="description">Description:</label>
		      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
		    </div>



		    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
		</form>

	</div>

		<!-- import jquery -->
	<script src="js/jquery-1.11.0.js"></script>
    <script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/hci-friends.js"></script>
</body>
</html>
